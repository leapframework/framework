<sqls xmlns="http://www.leapframework.org/schema/sqls">
    <command key="calc.CalcModel">
        select
            count(1) as dispatch_num,
            sum(first) as total_adult_num,
            sum(second) as total_child_num,
            sum(ifnull(third,0)) as total_seat,
            sum(first + second)/sum(ifnull(third,0)) as seat_percent
        from calc_model
    </command>
</sqls>